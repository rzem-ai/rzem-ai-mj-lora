{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LoRA Training Dataset Generator",
  "version": "0.1.0",
  "identifier": "ai.rzem.mj-lora-training-generator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LoRA Training Dataset Generator",
        "width": 1200,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 900
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/**"]
      },
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "dialog:allow-open",
            "dialog:allow-save",
            "core:default",
            "core:path:default",
            "core:event:default",
            "core:app:default",
            "core:window:default",
            "core:webview:default"
          ]
        }
      ]
    },
    "withGlobalTauri": false
  },
  "plugins": {},
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
